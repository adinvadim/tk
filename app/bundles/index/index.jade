      div(elem="row")
        div(block="form-group", mods="col:1-of-2")
          input(elem="input")
        div(block="form-group", mods="col:1-of-2")
          input(elem="input")
      div(elem="row")
        div(block="form-group")
          textarea(elem="textarea")






